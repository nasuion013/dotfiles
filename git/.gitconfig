[user]
	name  = Serghei Cebotari
	email = cebotariserghei@gmail.com
[fetch]
	prune = true
[merge]
	#Refuse to merge and exit with a non-zero status unless the current HEAD is already
	#up-to-date or the merge can be resolved as a fast-forward
	ff    = only
	tool  = meld
[push]
	#Push the current branch back to the branch whose changes are usually integrated into the current branch
	default = simple
[alias]
	aa    = add --all
	co    = checkout
	cob   = checkout -b
	cm    = commit
	cma   = commit --all
	cmm   = commit --amend
	df    = diff
	ds    = diff --staged
	dw    = diff --word-diff
	ft    = fetch
	fta   = fetch --all
	st    = status
	sts   = status -s
	sh    = stash
	sha   = !git add -A && git stash
	shd   = stash drop
	shl   = stash list
	shp   = stash pop
	br    = branch
	rb    = rebase
	rbi   = rebase --interactive
	rba   = rebase --abort
	rbc   = rebase --continue
	rs    = reset
	rsh   = reset --hard
	pl    = pull
	plr   = pull --rebase
	ps    = push
	psf   = push -f
	psu   = push -u
	mg    = merge
	rt    = remote
	rtv   = remote -v
	rta   = remote add
	rtr   = remote remove
	rtd   = remote remove
	rtm   = remote rename
	type  = cat-file -t
	stats = shortlog -sn --all --no-merges
	hist  = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
	ls    = log --pretty=format:"%C(yellow)%h%Cred%d\\ %C(white)%s%Cgreen\\ [%cn]" --decorate
	today = log --pretty=format:"%Cgreen%cd\\ %C(yellow)%h\\ %Creset%s" --date=format:%T --since=00:00:00 --all --no-merges --author=cebotariserghei@gmail.com
	wip   = !git add -A && git commit -m "WIP"
[color]
	ui = true
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = red
[core]
	excludesfile = ~/.gitignore
[diff]
	tool = meld
